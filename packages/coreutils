bp_install autoconf
bp_install automake
bp_install bison
bp_install gettext
bp_install gperf
bp_install gzip
bp_install perl
bp_install rsync
bp_install tar
bp_install texinfo
download http://ftp.gnu.org/gnu/coreutils/coreutils-8.13.tar.gz
extract
export CFLAGS=$(cflags -D_GL_WARN_ON_USE\(a\,b\)=)
./configure $(configure_flags)
make install
