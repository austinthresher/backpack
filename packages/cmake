bp_install zlib
bp_install curl
bp_install liblzma
bp_install librhash
bp_install libarchive
download https://github.com/Kitware/CMake/releases/download/v3.16.2/cmake-3.16.2.tar.gz
#download https://github.com/Kitware/CMake/releases/download/v2.8.12.2/cmake-2.8.12.2.tar.gz
extract
export CMAKE_PREFIX_PATH="$BP_BPFS_PATH"
./configure $(configure_flags --system-curl)
make $(make_flags)
make $(make_flags install)
link_to_root
